<form string="Product Cost Plan" col="6">
    <label name="product"/>
    <field name="product"/>
    <label name="bom"/>
    <field name="bom"/>
    <label name="quantity"/>
    <field name="quantity"/>
    <notebook colspan="6">
        <page string="General" id="general">
            <field name="products" colspan="4"/>
            <label name="product_cost"/>
            <field name="product_cost"/>
        </page>
        <page string="BOM Configuration" id="configuration">
            <field name="boms" colspan="4"/>
        </page>
    </notebook>
    <label name="total_cost"/>
    <field name="total_cost"/>
    <newline/>
    <label name="state"/>
    <field name="state"/>
    <button name="compute"/>
    <button name="reset"/>
</form>
